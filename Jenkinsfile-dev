pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            parallel {
                stage('Node 18') {
                    steps {
                        bat 'node -v'
                        bat 'npm install'
                    }
                }
                stage('Node 20') {
                    steps {
                        bat 'node -v'
                        bat 'npm install'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Run (Docker)') {
            steps {
                bat 'docker build -t app-dev .'
                bat 'docker run -d -p 3001:3000 --name app-dev app-dev'
            }
        }

        stage('Smoke Test') {
            steps {
                bat 'powershell -ExecutionPolicy Bypass -File smoke-test.ps1'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*/dist/*, */.log', fingerprint: true
            }
        }
    }

    post {
        always {
            bat 'docker stop app-dev || exit 0'
            bat 'docker rm app-dev || exit 0'
        }
    }

}