pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *') // v√©rifie les pushes toutes les 5 min
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat 'echo Building dev branch...'
                bat 'msbuild MySolution.sln /p:Configuration=Release'
            }
        }
        stage('Unit Tests') {
            steps {
                bat 'echo Running unit tests...'
                bat 'powershell -File run-tests.ps1'
            }
        }
        stage('Package') {
            steps {
                bat 'echo Packaging artifacts...'
                bat 'powershell -File package.ps1'
            }
        }
    }
    post {
        success {
            echo 'Dev build succeeded'
        }
        failure {
            echo 'Dev build failed'
        }
    }
}
