pipeline {
    agent any

    when {
        tag pattern: "v*", comparator: "GLOB"
    }

    environment {
        VERSION = "${env.GIT_TAG_NAME}"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                bat "npm run build"
            }
        }

        stage('Run (Docker)') {
            steps {
                bat "docker build -t app:${VERSION} ."
                bat "docker run -d --name app-release app:${VERSION}"
            }
        }

        stage('Smoke Test') {
            steps {
                bat 'powershell -ExecutionPolicy Bypass -File smoke-test.ps1'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*/dist/*, */.log', fingerprint: true
            }
        }
    }

    post {
        always {
            bat 'docker stop app-release || exit 0'
            bat 'docker rm app-release || exit 0'
        }
        success {
            echo "ðŸš€ Release ${VERSION} DONE"
        }
    }
}