pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *') // ou GitHub hook pour tag push
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            when {
                expression { env.GIT_TAG_NAME != null }
            }
            steps {
                bat "echo Building tag ${env.GIT_TAG_NAME}..."
                bat 'msbuild MySolution.sln /p:Configuration=Release'
            }
        }
        stage('Package') {
            when {
                expression { env.GIT_TAG_NAME != null }
            }
            steps {
                bat 'powershell -File package-release.ps1'
            }
        }
    }
    post {
        success {
            echo 'Tag build succeeded'
        }
        failure {
            echo 'Tag build failed'
        }
    }
}
