pipeline {
    agent any
    triggers {
        githubPullRequests() // <-- corriger ici
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat 'echo Building PR...'
                bat 'msbuild MySolution.sln /p:Configuration=Debug'
            }
        }
        stage('Smoke Tests') {
            steps {
                powershell 'C:\\jenkins\\scripts\\smoke-test.ps1'
            }
        }
    }
    post {
        success {
            echo 'PR build succeeded'
        }
        failure {
            echo 'PR build failed'
        }
    }
}
