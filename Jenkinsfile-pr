pipeline {
    agent any

    triggers {
        githubPullRequests()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                bat 'node -v'
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }

        stage('Run (Docker)') {
            steps {
                bat 'docker build -t app-pr .'
                bat 'docker run -d -p 3000:3000 --name app-pr app-pr'
            }
        }

        stage('Smoke Test') {
            steps {
                bat 'powershell -ExecutionPolicy Bypass -File smoke-test.ps1'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*/.log', fingerprint: true
            }
        }
    }

    post {
        always {
            bat 'docker stop app-pr || exit 0'
            bat 'docker rm app-pr || exit 0'
        }
        failure {
            echo '❌ Pipeline PR FAILED'
        }
        success {
            echo '✅ Pipeline PR PASSED'
        }
    }
}