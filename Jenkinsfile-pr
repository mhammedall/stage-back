pipeline {
    agent any
    triggers {
        // Scan PRs automatically via GitHub hook
        githubPullRequest()
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat 'echo Building PR...'
                bat 'msbuild MySolution.sln /p:Configuration=Debug'
            }
        }
        stage('Smoke Tests') {
            steps {
                bat 'echo Running smoke tests...'
                bat 'powershell -File smoke-test.ps1'
            }
        }
    }
    post {
        success {
            echo 'PR build succeeded'
        }
        failure {
            echo 'PR build failed'
        }
    }
}
